<UserControl x:Class="Canvas.Controls.Example.ExampleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Canvas.Controls.Example">

    <UserControl.DataContext>
        <local:ExampleControlViewModel x:Name="vm"/>
    </UserControl.DataContext>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Here's some text!" Grid.Column="0" VerticalAlignment="Center" Padding="5" Foreground="Black"/>
    </Grid>
    
</UserControl>
